%md-dialog.support-diehard_fund-modal
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %h1.lmo-h1{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.heading", translate-value-group: "{{group.name}}"}
      %material_modal_header_cancel_button
  .md-dialog-content.md-body-1.support-diehard_fund-modal__body
    .support-diehard_fund-modal__upgrade.support-diehard_fund-modal--container
      .support-diehard_fund-modal__upgrade-content
        %h2.lmo-h2{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.upgrade_title"}
        %ul.support-diehard_fund-modal__upgrade-items
          %li.support-diehard_fund-modal__upgrade-item
            %i.fa.fa-globe>
            .support-diehard_fund-modal__custom-domain
              %h3.lmo-bold{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.custom_domain"}
              %p{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.custom_domain_description"}
          %li.support-diehard_fund-modal__upgrade-item
            %i.fa.fa-slack>
            .support-diehard_fund-modal__slack-integration
              %h3.lmo-bold{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.slack_integration"}
              %p{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.slack_integration_description"}
          %li.support-diehard_fund-modal__upgrade-item
            %i.fa.fa-money>
            .support-diehard_fund-modal__no-more-modals
              %h3.lmo-bold{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.no_more_modals"}
        %a.support-diehard_fund-model__find-out-more{ng-click: "upgrade()", target: "_blank", title: "{{ 'diehard_fund_buyer_experience.support_diehard_fund_modal.upgrade_button_title' | translate }}"}
          %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.find_out_more"}
      %a.support-diehard_fund-modal__upgrade-button{ng-click: "upgrade()", type: "button", title: "{{ 'diehard_fund_buyer_experience.support_diehard_fund_modal.upgrade_button_title' | translate }}"}
        %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.upgrade"}
    .support-diehard_fund-modal__donate.support-diehard_fund-modal--container
      .support-diehard_fund-modal__donate-content
        %h2.lmo-h2{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.donate_title"}
        %img.support-diehard_fund-modal__donate-image{src: "/img/unctad.png", alt: "{{ 'diehard_fund_buyer_experience.support_diehard_fund_modal.donate_image_alt' | translate }}"}
        %label.support-diehard_fund-modal__donate-caption{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.donate_caption"}
        %p{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.donate_text", translate-value-link: "http://blog.diehard.fund/category/stories/"}
      %a.support-diehard_fund-modal__donate-button{ng-click: "donate()", type: "button", title: "{{ 'diehard_fund_buyer_experience.support_diehard_fund_modal.donate_button_title' | translate }}"}
        %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.donate"}

  .modal-footer.lmo-clearfix.support-diehard_fund-modal__footer
    .support-diehard_fund-modal__lets-talk
      %img.choose_plan_modal__mhjbs-head{src: "/img/mhjb.png"}>
      %span
        %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.questions"}>
        %a{ng-click: "openIntercom()", target: "_blank"}>
          %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.lets_talk"}
    %a.support-diehard_fund-modal__no-thanks{ng-click: "dismiss()", title: "{{ 'diehard_fund_buyer_experience.support_diehard_fund_modal.no_thanks' | translate }}"}
      %span{translate: "diehard_fund_buyer_experience.support_diehard_fund_modal.no_thanks"}>
      %i.fa.fa-times
